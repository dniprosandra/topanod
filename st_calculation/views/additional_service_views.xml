<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="additional_service_tree_view" model="ir.ui.view">
            <field name="name">additional.service.tree</field>
            <field name="model">additional.service</field>
            <field name="arch" type="xml">
                <tree string="Additional Service" editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="additional_service_act_window" model="ir.actions.act_window">
            <field name="name">Additional Service</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">additional.service</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to add new Additional Service.
                </p>
            </field>
        </record>
    </data>
</odoo>